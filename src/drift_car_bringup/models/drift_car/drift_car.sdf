<?xml version="1.0" ?>
<sdf version="1.8">
  <model name="drift_car">
    
    <!-- ==================== CHASSIS ==================== -->
    <link name="base_link">
      <pose>0 0 0.048 0 0 0</pose>
      
      <inertial>
        <mass>1.0</mass>
        <pose>0 0 0 0 0 0</pose>
        <inertia>
          <ixx>0.00192</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.00763</iyy>
          <iyz>0</iyz>
          <izz>0.00938</izz>
        </inertia>
      </inertial>
      
      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>0.30 0.15 0.04</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.4 1</ambient>
          <diffuse>0.2 0.2 0.6 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
      
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>0.30 0.15 0.04</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- ==================== REAR LEFT WHEEL ==================== -->
    <link name="rear_left_wheel">
      <pose relative_to="rear_left_wheel_joint">0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>0.125</mass>
        <inertia>
          <ixx>0.000038</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000038</iyy>
          <iyz>0</iyz>
          <izz>0.000068</izz>
        </inertia>
      </inertial>
      
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
        </material>
      </visual>
      
      <collision name="collision">
        <geometry>
          <sphere>
            <radius>0.033</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.3</mu>
              <mu2>0.15</mu2>
              <slip1>0.1</slip1>
              <slip2>0.3</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>
    
    <joint name="rear_left_wheel_joint" type="revolute">
      <pose relative_to="base_link">-0.13 0.09 -0.015 -1.5708 0 0</pose>
      <parent>base_link</parent>
      <child>rear_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
          <effort>10</effort>
          <velocity>100</velocity>
        </limit>
        <dynamics>
          <damping>0.001</damping>
          <friction>0.001</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- ==================== REAR RIGHT WHEEL ==================== -->
    <link name="rear_right_wheel">
      <pose relative_to="rear_right_wheel_joint">0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>0.125</mass>
        <inertia>
          <ixx>0.000038</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000038</iyy>
          <iyz>0</iyz>
          <izz>0.000068</izz>
        </inertia>
      </inertial>
      
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
        </material>
      </visual>
      
      <collision name="collision">
        <geometry>
          <sphere>
            <radius>0.033</radius>
