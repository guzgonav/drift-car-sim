          </friction>
        </surface>
      </collision>
    </link>
    
    <joint name="front_right_wheel_joint" type="revolute">
      <pose relative_to="front_right_steering_link">0 0 0 -1.5708 0 0</pose>
      <parent>front_right_steering_link</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
          <effort>0</effort>
          <velocity>100</velocity>
        </limit>
        <dynamics>
          <damping>0.0001</damping>
          <friction>0.0001</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- ==================== ACKERMANN STEERING PLUGIN ==================== -->
    <!-- 
      Subscribes to: /model/drift_car/cmd_vel (gz.msgs.Twist)
      Publishes to:  /model/drift_car/odometry (gz.msgs.Odometry)
      
      Vehicle parameters:
        wheel_base:       0.26 m (front to rear axle)
        wheel_separation: 0.18 m (left to right wheel center)
        kingpin_width:    0.16 m (steering pivot to pivot)
        wheel_radius:     0.033 m
    -->
    <plugin
      filename="gz-sim-ackermann-steering-system"
      name="gz::sim::systems::AckermannSteering">
      
      <!-- Drive wheels (rear) -->
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      
      <!-- Steering joints (front) -->
      <left_steering_joint>front_left_steering_joint</left_steering_joint>
      <right_steering_joint>front_right_steering_joint</right_steering_joint>
      
      <!-- Geometry -->
      <wheel_base>0.26</wheel_base>
      <wheel_separation>0.18</wheel_separation>
      <kingpin_width>0.16</kingpin_width>
      <wheel_radius>0.033</wheel_radius>
      <steering_limit>0.6</steering_limit>
      
      <!-- Velocity limits -->
      <min_velocity>-3.0</min_velocity>
      <max_velocity>3.0</max_velocity>
      <min_acceleration>-2.0</min_acceleration>
      <max_acceleration>2.0</max_acceleration>
      
      <!-- Odometry -->
      <odom_publish_frequency>50</odom_publish_frequency>
      <odom_topic>odometry</odom_topic>
      <tf_topic>tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      
    </plugin>
    
    <!-- Publish joint states for monitoring -->
    <plugin
      filename="gz-sim-joint-state-publisher-system"
      name="gz::sim::systems::JointStatePublisher">
      <joint_name>front_left_steering_joint</joint_name>
      <joint_name>front_right_steering_joint</joint_name>
      <joint_name>front_left_wheel_joint</joint_name>
      <joint_name>front_right_wheel_joint</joint_name>
      <joint_name>rear_left_wheel_joint</joint_name>
      <joint_name>rear_right_wheel_joint</joint_name>
    </plugin>

  </model>
</sdf>