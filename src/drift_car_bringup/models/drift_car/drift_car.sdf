        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.3</mu>
              <mu2>0.15</mu2>
              <slip1>0.1</slip1>
              <slip2>0.3</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>
    
    <joint name="rear_right_wheel_joint" type="revolute">
      <pose relative_to="base_link">-0.13 -0.09 -0.015 -1.5708 0 0</pose>
      <parent>base_link</parent>
      <child>rear_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
          <effort>10</effort>
          <velocity>100</velocity>
        </limit>
        <dynamics>
          <damping>0.001</damping>
          <friction>0.001</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- ==================== FRONT LEFT STEERING + WHEEL ==================== -->
    <link name="front_left_steering_link">
      <pose relative_to="front_left_steering_joint">0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>0.01</mass>
        <inertia>
          <ixx>0.000001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000001</iyy>
          <iyz>0</iyz>
          <izz>0.000001</izz>
        </inertia>
      </inertial>
    </link>
    
    <joint name="front_left_steering_joint" type="revolute">
      <pose relative_to="base_link">0.13 0.09 -0.015 0 0 0</pose>
      <parent>base_link</parent>
      <child>front_left_steering_link</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.6</lower>
          <upper>0.6</upper>
          <effort>10</effort>
          <velocity>5</velocity>
        </limit>
        <dynamics>
          <damping>0.01</damping>
          <friction>0.0</friction>
        </dynamics>
