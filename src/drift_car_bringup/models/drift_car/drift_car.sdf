    <!-- ==================== FRONT RIGHT STEERING + WHEEL ==================== -->
    <link name="front_right_steering_link">
      <pose relative_to="front_right_steering_joint">0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>0.01</mass>
        <inertia>
          <ixx>0.000001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000001</iyy>
          <iyz>0</iyz>
          <izz>0.000001</izz>
        </inertia>
      </inertial>
    </link>
    
    <joint name="front_right_steering_joint" type="revolute">
      <pose relative_to="base_link">0.13 -0.09 -0.015 0 0 0</pose>
      <parent>base_link</parent>
      <child>front_right_steering_link</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.6</lower>
          <upper>0.6</upper>
          <effort>10</effort>
          <velocity>5</velocity>
        </limit>
        <dynamics>
          <damping>0.01</damping>
          <friction>0.0</friction>
        </dynamics>
      </axis>
    </joint>
    
    <link name="front_right_wheel">
      <pose relative_to="front_right_wheel_joint">0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>0.125</mass>
        <inertia>
          <ixx>0.000038</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000038</iyy>
          <iyz>0</iyz>
          <izz>0.000068</izz>
        </inertia>
      </inertial>
      
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
        </material>
      </visual>
      
      <collision name="collision">
        <geometry>
          <sphere>
            <radius>0.033</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
              <slip1>0.0</slip1>
