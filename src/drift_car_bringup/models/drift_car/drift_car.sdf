    </joint>
    
    <link name="front_left_wheel">
      <pose relative_to="front_left_wheel_joint">0 0 0 0 0 0</pose>
      
      <inertial>
        <mass>0.125</mass>
        <inertia>
          <ixx>0.000038</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000038</iyy>
          <iyz>0</iyz>
          <izz>0.000068</izz>
        </inertia>
      </inertial>
      
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.033</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
        </material>
      </visual>
      
      <collision name="collision">
        <geometry>
