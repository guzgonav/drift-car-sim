          <box>
            <size>0.30 0.15 0.04</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.4 1</ambient>
          <diffuse>0.2 0.2 0.6 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
