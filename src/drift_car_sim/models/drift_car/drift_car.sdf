<?xml version="1.0" ?>
<sdf version="1.8">
  <model name="drift_car">
    
    <!-- ==================== CHASSIS ==================== -->
    <link name="base_link">
      <pose>0 0 0.048 0 0 0</pose>
      
      <inertial>
        <mass>1.0</mass>
        <pose>0 0 0 0 0 0</pose>
        <inertia>
          <ixx>0.00192</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.00763</iyy>
          <iyz>0</iyz>
          <izz>0.00938</izz>
